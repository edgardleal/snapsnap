{
	"extends": "tslint-config-airbnb",

  "rules": {
	  "trailing-comma"              : false,
	  "import-name"                 : false,
    "no-consecutive-blank-lines"  : [true, 2],
    "max-line-length"             : [true, 140],
    "ter-indent"                  : false,
    "ter-arrow-parens"            : false
  },

  "linterOptions": {
    "exclude": ["./dist/**/*"]
  }
}
